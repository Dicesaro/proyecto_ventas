<p style="color: green"><%= notice %></p>

<% content_for :title, "Pedidos" %>

<h1>Pedidos</h1>

<table id="pedidos-table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Cliente</th>
      <th>Estado</th>
      <th>Fecha</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.codigo %></td>
        <td><%= pedido.cliente.nombre %></td>
        <td><%= pedido.estado.capitalize %></td>
        <td><%= pedido.fecha.strftime('%d/%m/%Y %H:%M') %></td>
        <td>
          <%= link_to "Ver", pedido_path(pedido), class: "btn btn-view" %>
          <%= link_to "Editar", edit_pedido_path(pedido), class: "btn btn-edit" %>
          <%= link_to "Eliminar", pedido_path(pedido), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo Pedido", new_pedido_path, class: "btn btn-new" %>
