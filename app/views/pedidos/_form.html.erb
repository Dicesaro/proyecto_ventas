      <h2><%= pluralize(pedido.errors.count, "error") %> prohibieron guardar este pedido:</h2>

      <ul>
        <% pedido.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Campo para C贸digo del Pedido -->
